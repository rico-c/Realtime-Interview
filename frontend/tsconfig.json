{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "strict": false,
    "isolatedModules": false,
    "noImplicitAny": false,

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": ["src"]
}
